{% extends 'base.html.twig' %}

{% block title %}Edit Entry{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4 mt-4 text-center">Edit Clock Entry</h1>

    <div class="max-w-xl mx-auto bg-white p-6 rounded shadow">
        {{ form_start(form) }}
        {% for field in form %}
            <div class="mb-4">
                {{ form_label(field, null, { 'label_attr': {'class': 'block text-gray-700 font-semibold mb-1'} }) }}
                {{ form_widget(field, { 'attr': {'class': 'w-full border border-gray-300 p-2 rounded'} }) }}
            </div>
        {% endfor %}
        <div class="text-center">
            <button class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" type="submit">Update</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
